{
    "name": "burki/exist-db-rest-client",
    "type": "library",
    "description": "A client for querying and transforming results from eXist-db via REST API",
    "keywords": [
        "eXist-db",
        "xquery",
        "xslt",
        "php",
        "rest"
    ],
    "homepage": "https://github.com/burki/eXist-db-REST-Client",
    "license": "GPL-2.0",
    "require": {
        "php" : "~5.5|~7.0",
        "guzzlehttp/guzzle": "^5.0|^6.0",
        "sabre/xml": "~1.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "ExistDbRestClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExistDbRestClient\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --verbose tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "stable"
}
